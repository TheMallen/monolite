{
  "name": "monolite",
  "version": "0.4.6",
  "description": "Structural-sharing tree object modifier",
  "main": "lib/monolite.js",
  "types": "lib/monolite.d.ts",
  "scripts": {
    "test": "jest",
    "build": "tsc",
    "precommit": "lint-staged"
  },
  "lint-staged": {
    "*.{ts,js,json}": [
      "prettier --write",
      "header format --write",
      "git add"
    ],
    "*.ts": ["tslint", "git add"]
  },
  "authors": [
    "Chris Feijoo [github.com/kube]",
    "Ben Lechiara [github.com/corseman]"
  ],
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^22.0.0",
    "husky": "^0.14.3",
    "jest": "^22.0.4",
    "kube-header": "^1.0.4",
    "lint-staged": "^6.0.0",
    "prettier": "^1.9.2",
    "ts-jest": "^22.0.0",
    "typescript": "^2.1.4"
  },
  "jest": {
    "transform": {
      ".ts": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|js)$",
    "moduleFileExtensions": ["ts", "js"]
  }
}
