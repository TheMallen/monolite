{
  "name": "monolite",
  "version": "0.3.2",
  "description": "Structural-sharing tree object modifier",
  "main": "lib/monolite.js",
  "types": "lib/monolite.d.ts",
  "scripts": {
    "dev": "jest --watch",
    "lint": "tslint -p .",
    "build": "gulp build",
    "prepublish": "gulp && npm run flowgen",
    "flowgen": "for file in lib/*.d.ts; do flowgen \"$file\" -o \"lib/`basename \"$file\" .d.ts`.js.flow\";done;",
    "test": "jest"
  },
  "authors": [
    "Chris Feijoo [github.com/kube]",
    "Ben Lechiara [github.com/corseman]"
  ],
  "license": "MIT",
  "dependencies": {
    "deep-equal": "^1.0.1"
  },
  "devDependencies": {
    "@types/deep-equal": "^0.0.30",
    "@types/jest": "^19.2.2",
    "babel-plugin-transform-object-assign": "^6.22.0",
    "babel-preset-latest": "^6.16.0",
    "flowgen": "^1.0.1",
    "gulp": "gulpjs/gulp#4.0",
    "gulp-babel": "^6.1.2",
    "gulp-typescript": "^3.1.4",
    "jest": "^19.0.2",
    "merge-stream": "^1.0.1",
    "ts-jest": "^19.0.9",
    "tslint": "^5.1.0",
    "typescript": "^2.1.4"
  },
  "jest": {
    "transform": {
      ".ts": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|js)$",
    "moduleFileExtensions": [
      "ts",
      "js"
    ]
  }
}
